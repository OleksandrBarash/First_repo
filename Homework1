def get_days_from_today(date):
    try:
        # Перетворюємо рядок на об'єкт datetime
        input_date = datetime.strptime(date, '%Y-%m-%d').date()
        # Отримуємо поточну дату
        today = datetime.today().date()
        # Розраховуємо різницю у днях
        delta = input_date - today
        # Повертаємо кількість днів як ціле число
        return delta.days
    except ValueError:
        # Якщо формат дати неправильний, піднімаємо помилку
        raise ValueError("Невірний формат дати. Використовуйте 'РРРР-ММ-ДД'.")

        